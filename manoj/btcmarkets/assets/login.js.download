document.addEventListener("DOMContentLoaded",function(event){collapseInfoBlock();});function collapseInfoBlock(){const activeClass='active';const wrapperClass='js-collapse-info-list';let wrapperList=document.getElementsByClassName(wrapperClass);if(wrapperList&&wrapperList.length){for(let wrapper of wrapperList){wrapper.onclick=function(event){for(let collapseEl of this.children){if(collapseEl==event.target||collapseEl.contains(event.target)){collapseEl.classList.toggle(activeClass);}else{collapseEl.classList.remove(activeClass);}}}}}}
function closeErrorMessage(){document.getElementById('errors-container').innerHTML='';}